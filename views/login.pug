extends layouts/layout
block content
  include includes/navbar.pug
  include includes/errorlist.pug
  div(class="container")
    form(action="login" method="post" class="form")
      label(for='inputUser') Username
      input(type='text' class="form-input" name="username" id="inputUser" placeholder="Username" minlength="2" maxlength="255" required autofocus)
  
      label(for='inputPass') Password
      input(type='password' class="form-input" name="password" id="inputPass" placeholder="Password" minlength="7" maxlength="255" required)
  
      button(class="btn btn-lg btn-primary btn-block" type="submit") Sign in

    div(class="container other-button" id="signup-button")
      form(action="signup" method="get")
        p Not registered?
        button(class="btn btn-lg btn-primary btn-block" type="submit") Sign up
        a(class="button-link" href="/signup")
